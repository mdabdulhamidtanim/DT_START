@model List<Product>
<div class="container">
     <div class="row pt-4">
        <div class=" col-6">
        <h2 class=" text-primary">
            category list
        </h2>
        </div>
        <div class ="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus"></i>create new category
                </a>
        </div>
     </div>
    
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Title
        </th>
        <th>
           ISBN
        </th>
        <th>
            Author
        </th>
        <th>
            Price
        </th>
        <th>
            Category
        </th>
    </tr>
    </thead>

<tbody>
    @foreach(var obj in Model){
    <tr>
        <td>@obj.Title</td>
        <td>@obj.ISBN</td>
        <td>@obj.Author</td>
        <td>@obj.Price</td>
        <td> </td>
                    
        <td>
            <div class="w-25 btn-group" role="group">
                <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i>Edit
                    </a>
           </div>
        </td>
        <td>
            <div class="w-25 btn-group" role="group">
                            <a asp asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i>Delete
                     </a>
             </div>
        </td>
    </tr>
    }
</tbody>
</table>
</div>